<div class="register-form">

    <h1>Signup</h1>

    <section class='register-input-area'>

  <form action="/signup" method="post">
    <div class="form-row">
    <div class="form-group col-md-6">
      <input type="text" name='first_name' class="form-control" id="inputEmail4" placeholder="First Name">
    </div>
    <div class="form-group col-md-6">
      <input type="text" name='last_name' class="form-control" id="inputPassword4" placeholder="Last Name">
    </div>
  </div>
  <div class="form-group email-area">
    <input type="email" class="form-control" name="email" placeholder='Email'><br>

    <input type="email" class="form-control" placeholder='Confirm Email'><br>

    <input type="password" class="form-control" name="password" placeholder='Password'><br>

    <input type="password" class="form-control" placeholder='Confirm Password'><br>

    <div class="form-row align-items-center">
    <div class="col-auto my-1">
      <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Preference</label>
      <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
        <option selected>Gender...</option>
        <option value="1">Female</option>
        <option value="2">Male</option>
        <option value="3">Other</option>
      </select>
    </div>
    <br>


  </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</section>
</div>
