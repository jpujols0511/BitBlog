

<% @blogs.each do |blog| %>

  <% if blog.user_id == session[:user_id] %>
  <% require 'erb' %>
  <article class="my-blogs">
    <div class="">
    <h3><%=ERB::Util.html_escape(blog.title)%></h3>
    </div>
    <div class="">

  <p><%=ERB::Util.html_escape(blog.content)%></p>
  <%if blog.image_url.nil? %>
  <%else%>
  <img style='width: 30%;'src='uploads/<%=blog.image_url%>' alt=" ">
  <%end%>
  <br>
  <small><%=blog.created_by%></small>
  </div>
</article>
  <%end%>

<%end%>
